set inputbar-bg "#BDAE93"  # GRUVBOX_LIGHT_3
set inputbar-fg "#076678"  # GRUVBOX_FADED_BLUE

set statusbar-bg "#665C54"  # GRUVBOX_DARK_2
set statusbar-fg "#B8BB26"  # GRUVBOX_BRIGHT_GREEN